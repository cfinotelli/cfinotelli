{
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.fontSize": 15,
  
    "workbench.iconTheme": "bearded-icons",
    "workbench.colorTheme": "Bearded Theme Coffee Reversed",
    "workbench.editor.tabSizing": "shrink",
  
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
  
    "editor.accessibilityPageSize": 8,
    "editor.fontSize": 16,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "editor.rulers": [
      80,
      120
    ],
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always",
      "quickfix.insertBraces": "always",
      "quickfix.insertParentheses": "always",
      "quickfix.insertBrackets": "always",
      "quickfix.insertColon": "always",
      "quickfix.insertComma": "always",
      "quickfix.insertSemicolon": "always",
      "source.addMissingImports.ts": "always"
    },
  
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.enableSmartCommit": true,
  
    "[typescript]": {
      "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascript]": {
      "editor.defaultFormatter": "vscode.typescript-language-features"
    },
  
    "window.commandCenter": true,
  
    "security.workspace.trust.untrustedFiles": "open",
  }
